<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SportActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/SportActivity_iv_sport"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/SportActivity_tv_sportName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport Name"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/SportActivity_sp_sportTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sport Best Time"
        android:textAlignment="textEnd"
        android:padding="16dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/SportActivity_tv_sportInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport Information"
        android:padding="16dp"
        android:textSize="20sp"/>


</LinearLayout>